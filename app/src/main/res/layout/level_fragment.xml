<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Choose the level"
       android:paddingLeft="85dp"
       android:textSize="35dp"
       android:background="#A5DBF8"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/level1_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level2_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level3_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level4_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level5_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level6_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level7_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level8_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level9_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
            <Button
                android:id="@+id/level10_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:background="@drawable/icon1"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>